ot;${APP_BUNDLE}/Contents/Info.plist&quot;&#10;&#10;# Create PkgInfo&#10;echo &quot;ðŸ“‹ Creating PkgInfo...&quot;&#10;echo -n &quot;APPL????&quot; &gt; &quot;${APP_BUNDLE}/Contents/PkgInfo&quot;&#10;&#10;# Copy app icon if it exists&#10;if [ -f &quot;${SRCROOT}/AppIcon.icns&quot; ]; then&#10;    echo &quot;ðŸŽ¨ Copying app icon...&quot;&#10;    cp &quot;${SRCROOT}/AppIcon.icns&quot; &quot;${APP_BUNDLE}/Contents/Resources/AppIcon.icns&quot;&#10;elif [ -f &quot;${SRCROOT}/Resources/AppIcon.icns&quot; ]; then&#10;    echo &quot;ðŸŽ¨ Copying app icon...&quot;&#10;    cp &quot;${SRCROOT}/Resources/AppIcon.icns&quot; &quot;${APP_BUNDLE}/Contents/Resources/AppIcon.icns&quot;&#10;else&#10;    echo &quot;â„¹ï¸  Note: No AppIcon.icns found (app will use generic icon)&quot;&#10;fi&#10;&#10;# Ad-hoc code sign for local development&#10;echo &quot;âœï¸  Ad-hoc signing...&quot;&#10;codesign --force --sign - &quot;${APP_BUNDLE}&quot; 2&gt;&amp;1 || {&#10;    echo &quot;âš ï¸  Warning: Code signing failed (may not be critical for development)&quot;&#10;}&#10;&#10;# Copy to Xcode&apos;s expected build products directory for launching&#10;if [ -n &quot;${BUILT_PRODUCTS_DIR}&quot; ] &amp;&amp; [ &quot;${BUILT_PRODUCTS_DIR}&quot; != &quot;${SPM_BUILD_DIR}&quot; ]; then&#10;    XCODE_APP_BUNDLE=&quot;${BUILT_PRODUCTS_DIR}/${APP_NAME}.app&quot;&#10;    echo &quot;ðŸ“¦ Copying to Xcode products directory...&quot;&#10;    echo &quot;   From: ${APP_BUNDLE}&quot;&#10;    echo &quot;   To:   ${XCODE_APP_BUNDLE}&quot;&#10;    rm -rf &quot;${XCODE_APP_BUNDLE}&quot;&#10;    cp -R &quot;${APP_BUNDLE}&quot; &quot;${XCODE_APP_BUNDLE}&quot;&#10;    echo &quot;âœ… App copied for Xcode launch&quot;&#10;fi&#10;&#10;echo &quot;&quot;&#10;echo &quot;âœ… App bundle created successfully at:&quot;&#10;echo &quot;   ${APP_BUNDLE}&quot;&#10;if [ -n &quot;${BUILT_PRODUCTS_DIR}&quot; ] &amp;&amp; [ &quot;${BUILT_PRODUCTS_DIR}&quot; != &quot;${SPM_BUILD_DIR}&quot; ]; then&#10;    echo &quot;   ${XCODE_APP_BUNDLE